\newcounter{firstline}
\newlength\mnotevadjust

\newcommand\dilmnote[1]{%
  \notmarginhookfalse%
  \marginnote{\dilfont #1}%
  \notmarginhooktrue%
}
\newcommand\dilrnote[1]{%
  \@reversemargintrue
  \dilmnote{#1}%
  \@reversemarginfalse
}

\newcommand\dilrotnote[1]{%
  \notmarginhookfalse
  \@reversemargintrue
  \marginnote{%
    \rotatebox{90}{\dilfont #1}%
  }
  \@reversemarginfalse
  \notmarginhooktrue
}
\newcommand\dilrotadjnote[1]{%
  \settowidth\mnotevadjust{#1}
  \notmarginhookfalse
  \@reversemargintrue
  \marginnote{%
    \rotatebox{90}{\dilfont #1}%
  }[-\mnotevadjust]
  \@reversemarginfalse
  \notmarginhooktrue
}

